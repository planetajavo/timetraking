<% if @entry.errors.any? %>
        <ul>
          <% @entry.errors.full_messages.each do |error_msg| %>
            <li><%= error_msg %></li>
          <% end %>
        </ul>
<% end %>

    
<%= form_for [@project, @entry] do |f| %>
  <%= f.label :hours, class: 'label' %>
  <%= f.text_field :hours, size: 4 %>
  <br>
  <%= f.label :minutes, class: 'label' %>
  <%= f.text_field :minutes, size: 4 %>
  <br>
  <%= f.label :date, class: 'label' %>
  <%= f.date_field :date, size: 4 %>
  <br>
  <%= link_to 'Cancel', project_entries_path(@project), class: 'button' %>
  <%= f.submit entries_form_submit_text, class: 'button' %>

<% end %>