<div class="background">

	<h1>Enter new entries for your project</h1>
	<h2> <%= @project.name %> </h1>  

	<% if @entry.errors.any? %>
  		<ul>
    		<% @entry.errors.full_messages.each do |error_msg| %>
      		<li><%= error_msg %></li>
    		<% end %>
  		</ul>
	<% end %>
	
	<%= form_for [@project, @entry] do |f| %>
	  <%= f.label :hours, class: 'orange' %>
	  <%= f.text_field :hours, class: 'space' %>
	  <br>
	  <%= f.label :minutes,class: 'orange' %>
	  <%= f.text_field :minutes, class: 'space' %>
	  <br>
	  <%= f.label :date, class: 'orange' %>
	  <%= f.date_field :date,class: 'space'  %>
	  <br>

	  <%= f.submit 'Create entry',class: 'button' %>
	<% end %>
</div>
